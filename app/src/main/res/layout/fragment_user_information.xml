<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fyp.baigktk.cuifr.fragment.UserInformationFragment"
    android:padding="10dp"
    android:layout_margin="8dp">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/user_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center|top"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="134dp"
        android:padding="10dp"
        android:text="User Information"
        android:textColor="@color/organizationColor"
        android:textStyle="bold"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/profile_user_information_emailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textColor="@color/organizationColor"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@+id/user_info_title"/>
    <TextView
        android:id="@+id/profile_user_information_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="saimnasser098@gmail.com"
        android:textColor="@color/organizationColor"
        android:layout_toEndOf="@+id/profile_user_information_emailLabel"
        android:textSize="16sp"
        android:layout_below="@+id/user_info_title"
        android:layout_marginStart="5dp"/>
    <TextView
        android:id="@+id/profile_user_information_genderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender: "
        android:textColor="@color/organizationColor"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@+id/profile_user_information_emailLabel"
        />
    <TextView
        android:id="@+id/profile_user_information_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:textColor="@color/organizationColor"
        android:layout_toEndOf="@+id/profile_user_information_genderLabel"
        android:textSize="16sp"
        android:layout_below="@+id/profile_user_information_email"
        android:layout_marginStart="5dp"/>
    <TextView
        android:id="@+id/profile_user_information_milageLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Car Milage: "
        android:textColor="@color/organizationColor"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@+id/profile_user_information_gender"
        />
    <TextView
        android:id="@+id/profile_user_information_milage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:textColor="@color/organizationColor"
        android:layout_toEndOf="@+id/profile_user_information_milageLabel"
        android:textSize="16sp"
        android:layout_below="@+id/profile_user_information_gender"
        android:layout_marginStart="5dp"/>
    <ImageButton
        android:id="@+id/profile_user_information_edit"
        android:visibility="gone"
        android:background="@drawable/ic_mode_edit_black_36dp"
        android:layout_marginEnd="25dp"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/profile_user_information_Rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating: "
        android:textColor="@color/organizationColor"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@+id/profile_user_information_milageLabel"
        />


    


</RelativeLayout>
